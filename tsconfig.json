{
    "compilerOptions": {
      "target": "ES2020",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true
    },
    "include": [
        "src/**/*",
        "tests/**/*",
        "types/**/*.d.ts"
      ],
      "exclude": [
        "node_modules",
        ".vscode"
      ],
      "ts-node": {
        "esm": true
      },
  }